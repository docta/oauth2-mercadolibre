{
    "name": "docta/mercadolibre-oauth2-client",
    "description": "OAuth 2.0 Client for MercadoLibre",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Lucas Banegas",
            "email": "lucasconobanegas@gmail.com",
            "homepage": "https://github.com/lucascono"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "identity",
        "authentication",
        "authorization",
        "mercadolibre",
        "mercadolivre"
    ],
    "require": {
        "php": "^5.6|^7.0",
        "league/oauth2-client": "^2.3"
    },
    "require-dev": {
        "apigen/apigen": "^4.1",
        "mockery/mockery": "^1.1",
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Docta\\MercadoLibre\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Docta\\MercadoLibre\\OAuth2\\Client\\Test\\": "tests/"
        }
    },
    "scripts": {
        "all": ["@test", "@docs"],
        "test": ["@test-clean", "@test-phpunit", "@test-phpcbf", "@test-phpcs"],
        "test-clean": "rm -rdf ./build",
        "test-phpunit": "phpunit --colors=always",
        "test-phpcbf": "phpcbf --colors --standard=PSR2 -q ./src ./tests",
        "test-phpcs": "phpcs --colors --standard=PSR2 -p ./src ./tests",
        "docs": ["@docs-clean", "@docs-apigen"],
        "docs-clean": "rm -rdf ./docs",
        "docs-apigen": "apigen generate --config ./.apigen.yml"
    }
}
