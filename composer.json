{
    "name": "docta/oauth2-mercadolibre",
    "description": "MercadoLibre Provider for OAuth 2.0 Client",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Lucas Banegas",
            "email": "lucasconobanegas@gmail.com",
            "homepage": "https://github.com/lucascono"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "identity",
        "authentication",
        "authorization",
        "mercadolibre"
    ],
    "require": {
        "php": "^5.6|^7.0",
        "league/oauth2-client": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "mockery/mockery": "^1.1",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Docta\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Docta\\OAuth2\\Client\\Test\\": "tests/src/"
        }
    },
    "scripts": {
        "check": ["@test", "@cs-check"],
        "cs-check": "phpcs --colors --standard=PSR2 -sp ./src ./tests",
        "cs-fix": "phpcbf --colors --standard=PSR2 ./src ./tests",
        "test": "phpunit --colors=always"
    }
}
